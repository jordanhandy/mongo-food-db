<%- include('../partials/header') %> 

    <title><%= farm.name %> </title>
</head>
<body>
    <div class="ui success message">
        <div class="close icon">
            <div class="header">
                <%= messages %>
            </div>
        </div> 
    </div>
    <div class="ui one column stackable center aligned page grid">
        <div class="column twelve wide">
    <h1><%= farm.name %></h1>
    <p>This is the page for the Farm:  <%= farm.name %> <br>
    Here are its properties: <br>
   <b>City: </b><%= farm.city %> <br>
   <b>Email: </b><%= farm.email %> <br>
   <h2>Products</h2>
   <div class="ui list">
       <% for( let product of farm.products) { %>
        <div class= "ui item"><a href="/products/<%= product._id %> "><%= product.name %></a></div>
       <% } %>
   </div> 

   <a href="/farms/<%= farm._id %>/products/new"><button class="ui green button">Add a Product to this Farm</button></a> 
   Something wrong with my data? <a href="/farms/<%= farm._id %>/edit"><button class="ui blue button">Edit the Farm</button></a></p><br>
    <form action="/farms/<%= farm._id %>/delete?_method=DELETE" method="POST">
       <button type="submit"class="ui red button">Delete Farm</button>
    </form><br>
    <a href="/farms"><button class="tiny ui blue button">Go back home</button></a>
</div>
</div>
<%- include('../partials/footer') %> 